{
  "manifest_version": 3,
  "name": "YouTube Ad Blocker",
  "description": "Block YouTube Ads",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "webRequest",
    "webRequestBlocking",
    "storage"
  ],
  "background": {
    "service_worker": "./tools/background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["./src/content.js"]
    }
  ]
}