{
  "manifest_version": 3,
  "name": "YouTube Ad Blocker",
  "description": "Block YouTube Ads",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "declarativeNetRequest",
    "storage"
  ],
  "background": {
    "service_worker": "./tools/background.js"
  },
  "icons": {
    "16": "assets/icon.png",
    "48": "assets/icon.png",
    "128": "assets/icon.png"
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["./src/content.js"]
    }
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "./tools/rules.json"
      }
    ]
  }
}